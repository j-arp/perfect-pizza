<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.arpcentral.pizzadoh.DetailsActivity"
    tools:showIn="@layout/activity_details"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:id="@+id/starter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        >

        <TextView
            android:id="@+id/starter_container_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starter"
            android:textSize="42sp"/>

        <RelativeLayout
            android:id="@+id/flour_starter_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/starter_container_title">

            <TextView
                android:id="@+id/flour_starter_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/flour_title"
                android:textAlignment="center"
                android:textSize="32dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Measure ment goes here"
                android:textAlignment="center"
                android:layout_below="@+id/flour_starter_title"
                android:textSize="24dp"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flour_starter_container">

            <TextView
                android:id="@+id/water_starter_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/water_title"
                android:textAlignment="center"
                android:textSize="32dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Measure ment goes here"
                android:textAlignment="center"
                android:layout_below="@+id/water_starter_title"
                android:textSize="24sp"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:layout_below="@id/starter_container"
        android:layout_marginTop="40px"
        >

        <TextView
            android:id="@+id/details_container_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Measurements"
            android:textSize="42sp"/>

        <RelativeLayout
            android:id="@+id/flour_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_container_title">

            <TextView
                android:id="@+id/flour_details_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/flour_title"
                android:textAlignment="center"
                android:textSize="32dp"
                />

            <TextView
                android:id="@+id/flour_details_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Measure ment goes here"
                android:textAlignment="center"
                android:layout_below="@+id/flour_details_title"
                android:textSize="24dp"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flour_details_container">

            <TextView
                android:id="@+id/water_details_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/water_title"
                android:textAlignment="center"
                android:textSize="32dp"
                />

            <TextView
                android:id="@+id/water_details_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Measure ment goes here"
                android:textAlignment="center"
                android:layout_below="@+id/water_details_title"
                android:textSize="24sp"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
