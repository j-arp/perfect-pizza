<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.ResourcesActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/resource_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/regular_text"
        android:textColor="@color/colorPrimary"
        android:text="I Am a Name"
        android:layout_marginBottom="10dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/resource_img"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:minHeight="200dp"
            android:minWidth="200dp"
            android:layout_margin="10dp"
            android:maxWidth="200dp" />

        <TextView
            android:id="@+id/resource_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="3"
            android:textSize="@dimen/regular_text"
            android:textColor="@color/greyer"
            android:text="Phasellus accumsan cursus velit. Proin magna. Cras non dolor.  Donec pede justo, fringilla vel, aliquet nec, vulputate eget, arcu. Phasellus viverra nulla ut metus varius laoreet. Etiam rhoncus." />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/resouce_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get it on amazon now!"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="#fff"

            android:layout_marginTop="20dp" />
    </LinearLayout>

</LinearLayout>
